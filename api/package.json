{
  "name": "sit-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "start": "nest start",
    "start:dev": "npm run dev:setup && NODE_ENV=development nest start --watch",
    "start:debug": "npm run dev:setup && NODE_ENV=development nest start --debug --watch",
    "start:prod": "node dist/main",
    "build": "nest build",
    "dev:setup": "npm run services:up && NODE_ENV=development dotenv -e .env.development -- node infra/scripts/prisma-with-retry.js",
    "test:setup": "npm run services:up && NODE_ENV=test dotenv -e .env.test -- node infra/scripts/prisma-with-retry.js",
    "services:up": "docker compose -f infra/db/compose.yml up -d",
    "services:stop": "docker compose -f infra/db/compose.yml stop",
    "services:down": "docker compose -f infra/db/compose.yml down",
    "lint:prettier:fix": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint:eslint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "npm run test:setup && NODE_ENV=test dotenv -e .env.test -- jest",
    "test:watch": "npm run test:setup && NODE_ENV=test dotenv -e .env.test -- jest --watchAll",
    "test:cov": "npm run test:setup && NODE_ENV=test dotenv -e .env.test -- jest --coverage",
    "prisma:generate": "dotenv -e .env.development -- prisma generate --schema=infra/prisma/schema.prisma",
    "prisma:studio": "dotenv -e .env.development -- prisma studio --schema=infra/prisma/schema.prisma",
    "prisma:validate": "dotenv -e .env.development -- prisma validate --schema=infra/prisma/schema.prisma",
    "prisma:migrate:dev": "dotenv -e .env.development -- prisma migrate dev --schema=infra/prisma/schema.prisma",
    "prisma:migrate:deploy": "dotenv -e .env.development -- prisma migrate deploy --schema=infra/prisma/schema.prisma",
    "prisma:reset:dev": "dotenv -e .env.development -- prisma migrate reset --schema=infra/prisma/schema.prisma",
    "prisma:generate:test": "dotenv -e .env.test -- prisma generate --schema=infra/prisma/schema.prisma",
    "prisma:studio:test": "dotenv -e .env.test -- prisma studio --schema=infra/prisma/schema.prisma",
    "prisma:migrate:test": "dotenv -e .env.test -- prisma migrate dev --schema=infra/prisma/schema.prisma",
    "prisma:migrate:deploy:test": "dotenv -e .env.test -- prisma migrate deploy --schema=infra/prisma/schema.prisma",
    "prisma:reset:test": "dotenv -e .env.test -- prisma migrate reset --schema=infra/prisma/schema.prisma"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^11.0.1",
    "@prisma/client": "^6.8.2",
    "class-validator": "^0.14.2",
    "dotenv": "^16.5.0",
    "dotenv-cli": "^8.0.0",
    "mo": "^1.7.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "prisma": "^6.8.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.test\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleDirectories": [
      "node_modules",
      "<rootDir>"
    ],
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
